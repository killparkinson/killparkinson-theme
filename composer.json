{
  "name": "killparkinson/theme",
  "description": "Kill Parkinson Wordpress theme",
  "type": "project",
  "require": {},
  "require-dev": {
    "wp-coding-standards/wpcs": "^3.0",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.1"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": [
      "vendor/bin/phpcs --report-full theme/*.php theme/**/*.php"
    ],
     "lint:fix": [
      "vendor/bin/phpcbf theme/*.php theme/*.php  theme/**/*.php"
    ]
  }
}